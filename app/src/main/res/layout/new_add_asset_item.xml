<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_90dp"
    android:background="@color/FFFFFF">


    <ImageView
        android:id="@+id/new_add_asset_item_icon"
        android:layout_marginLeft="@dimen/length_30dp"
        android:layout_width="@dimen/length_20dp"
        android:layout_height="@dimen/length_32dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/eth_logo"/>

    <TextView
        android:id="@+id/add_new_asset_item_kind"
        android:layout_toRightOf="@+id/new_add_asset_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BPX"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/color_ff7990AC"
        android:textSize="?textsize19"
        android:layout_marginLeft="@dimen/length_22dp"
        />


    <CheckBox
        android:id="@+id/asset_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/length_30dp"
        android:button = "@drawable/checkbox_selector"
        />

</RelativeLayout>
